{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": false,
    "noEmit": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "outDir": "build",
    "rootDir": ".",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/.*.tsx",
    "**/*.js"
  ]
}
