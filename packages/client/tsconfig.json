{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "outDir": "dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/graphql/*": ["graphql/*"],
      "@/styles/*": ["styles/*"],
      "@/utils/*": ["utils/*"],
      "@/config/*": ["config/*"],
      "@/typings/*": ["typings/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "components/Icons/Chevron/index.tsx",
    "components/pages/Map/index.tsx",
    "components/Icons/MapMarker/index.tsx"
  ]
}
