{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@entity/*": ["./src/entity/*"],
      "@utils/*": ["./src/utils/*"],
      "@constants/*": ["./src/constants/*"],
      "@typings/*": ["./src/typings/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "src/typings/.index.ts"]
}
