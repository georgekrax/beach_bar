{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "target": "ES6",
    "module": "CommonJS",
    "noEmit": false,
    "outDir": "./build",
    "rootDir": "src",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "entity/*": ["entity/*"],
      "utils/*": ["utils/*"],
      "constants/*": ["constants/*"],
      "typings/*": ["typings/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*.ts", "src/schema/user/contact_details"]
}
